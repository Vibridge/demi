.contain {
  margin: 129rpx auto 0 auto;
  overflow-x: hidden;
  background: #F7F7F7;
}
.header{
  display: flex;
  width: 100%;
  border-top: 1px solid #e6e6e6;
  height: 92rpx;
  line-height: 92rpx;
  padding: 0 38rpx;
  color: #666666;
  font-size: 28rpx;
  background: #ffffff;
}
.all, .pay, .unpay, .service{
  padding:  0 50rpx;
  /* display: flex; */
  /* flex-direction: column; */
  height: 90rpx;
  line-height: 90rpx;
}
.active{
  color: #24BFFF
}

.desc{
  width:28rpx;
  height:2rpx;
  background:rgba(36,191,255,1);
  margin: 0 auto;
}
.main{
  width: 100%;
  padding-bottom: 48px;
}
.no_list{
  text-align: center;
  font-size: 26rpx;
  padding: 20rpx 0;
}
.note{
  padding: 9rpx 75rpx;
  color: #F2822E;
  font-size:24rpx;
  background:rgba(254,249,229,1);
}
.list{
  width: 100%;
  /* height: 435rpx; */
  margin: 20rpx 0;
  padding: 30rpx 35rpx 10rpx 40rpx;
  background: #ffffff;
  box-sizing: border-box;
}
.company_info{
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
  width: 100%;
  height: 26rpx;
}
.status{
  color: #24BFFF;
  font-size:28rpx;
}
.company_icon,.go_icon{
  align-self: center;
}
.company_icon image{
  width: 28rpx;
  margin-right: 20rpx;
}
.company_name{
  align-self: center;
  font-size:28rpx;
  font-weight: bold;
  color:rgba(36,191,255,1);
  margin-right: 14rpx;
}
.go_icon{
  align-self: center;
}
.go_icon image{
  width: 12rpx;
}
.produce{
  padding-bottom: 21rpx;
  border-bottom: 1rpx solid #E6E6E6;
  margin-bottom: 24rpx;
}
.produce_info{
  align-self: flex-start;
  display: flex;
  height: 98rpx;
}
.goods_img{
  align-self: flex-start;
  margin-right: 30rpx;
}
.goods_img image{
  width: 98rpx;
  height: 98rpx;
  border-radius:10rpx;
}
.detail{
  height: 98rpx;
  overflow: hidden;
}
.detail text{
  display: block;
  width: 300rpx;
  font-size:26rpx;
  font-weight: bold;
  color:rgba(77,77,77,1);
  overflow: hidden;  /*超出部分隐藏*/
  white-space: nowrap;  /*禁止换行*/
  text-overflow: ellipsis; /*省略号*/
}
.money text{
  display: block;
  font-size:26rpx;
  font-family:PingFang SC;
  font-weight: bold;
  color:rgba(153,153,153,1);
  margin-bottom: 13rpx;
}

.user_info{
  display: flex;
  height: 122rpx;
}
.user_icon{
  margin-right: 18rpx;
  height: 122rpx;
}
.user_icon image{
  width: 28rpx;
  height: 26rpx;
}
.name{
  font-size:26rpx;
  font-weight: bold;
  color:rgba(77,77,77,1);
  margin-bottom: 20rpx;
}
.name text:nth-last-child(1){
  margin-left: 91rpx;
}
.area{
  width:581rpx;
  font-weight: bold;
  font-size:26rpx;
  color:rgba(153,153,153,1);
  overflow: hidden;  /*超出部分隐藏*/
  white-space: nowrap;  /*禁止换行*/
  text-overflow: ellipsis; /*省略号*/
}
.bottom{
  display: flex;
  justify-content: flex-end;
}
.connect{
  font-size:26rpx;
  padding: 4rpx 38rpx;
  border:1rpx solid rgba(36,191,255,1);
  border-radius: 45rpx;
  margin:0 15rpx 0 0;
  color: rgba(36,191,255,1);
  background: #fff
}
.cancle{
  border:1rpx solid #CCCCCC;
  color: #999999;
  font-size: 26rpx;
  border-radius: 45rpx;
  padding: 18rpx 38rpx;
  margin:0 15rpx 0 0;
}
.sure{
  background:rgba(59,199,255,1);
  border-radius: 45rpx;
  padding: 18rpx 38rpx;
  color: #fff;
  font-size: 26rpx;
  border:1rpx solid rgba(59,199,255,1);
  margin:0 15rpx 0 0;
}


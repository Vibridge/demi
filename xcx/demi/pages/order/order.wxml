<toolTag prop-a="true" title="我的订单"/>
<login wx:if="{{login}}" prop-a="{{select}}" bindmyevent="onMyEvent" />
<view class="contain">
  <view class="header">
    <view class="all" data-active="all" bindtap="handleSelect">
      <text class="{{choose === 'all' ? 'active' : 'title'}}">全部</text>
      <view wx:if="{{choose === 'all'}}" class="desc"></view>
    </view>
    <view class="pay" data-active="pay" bindtap="handleSelect">
      <text class="{{choose === 'pay' ? 'active' : 'title'}}">已付款</text>
      <view wx:if="{{choose === 'pay'}}" class="desc"></view>
    </view>
    <view class="unpay" data-active="unpay" bindtap="handleSelect">
      <text class="{{choose === 'unpay' ? 'active' : 'title'}}">未付款</text>
      <view wx:if="{{choose === 'unpay'}}" class="desc"></view>
    </view>
  </view>

  <view class="main" style="{{orderList.length < 1 ? 'padding-bottom:0' : ''}}">
    <view class="no_list" wx:if="{{orderList.length < 1}}">
      暂无数据
    </view>
    <view class="list" wx:for="{{orderList}}" wx:for-item="item" wx:key="{{item.order_id}}">
      <view class="company_info">
        <view class="company_icon">
          <image mode="aspectFit" src="../asset/img/store@2x.png"></image>
        </view>
        <text class="company_name">{{item.company.company_name}}</text>
        <!-- <view class="go_icon">
           <image mode="aspectFit" src="../asset/img/icon_return.png"></image>
        </view> -->
      </view>
      <view class="produce">
        <view class="produce_info">
          <view class="goods_img">
            <image mode="aspectFit" src="{{item.snapshot.images[0].file_path}}"></image>
          </view>
          <view class="detail">
            <text>{{item.snapshot.goods.goods_title}}</text>
            <text>{{item.snapshot.goods.description}}</text>
          </view>
        </view>
        
        <view class="money">
          <text>¥{{item.snapshot.goods.goods_price}}</text>
          <text>x{{item.buy_quantity}}</text>
        </view>
      </view>
      <view class="user_info">
        <view class="user_icon">
          <image mode="aspectFit" src="../asset/img/site_Home@2x.png"></image>
        </view>
        <view class="user_name">
          <view class="name">
            <text>{{item.contact_name}}</text>
            <text>{{item.contact_phone}}</text>
          </view>
          <text class="area" wx:if="{{item.contact_address}}">{{item.contact_address}}</text>
          <!-- <text class="area" wx:if="{{!item.contact_address}}"></text> -->
        </view>
      </view>
      <view class="bottom">
        <form data-id="{{item.boss.user_id}}" data-price="{{item.snapshot.goods.goods_price}}" data-goods="{{item.snapshot.goods.goods_title}}" data-name="{{item.company.company_name}}" bindsubmit="chat" bindreset="formReset" report-submit="true">
          <button class="connect" form-type="submit">咨询雇主</button>
        </form>
        <!-- <button  bindtap="chat">联系卖家</button> -->
        <button wx:if="item.status == 0" class="go_pay">未付款</button>
      </view>
    </view>
  </view>
</view>
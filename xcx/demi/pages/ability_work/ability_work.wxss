.contain {
  margin: 140rpx auto 0 auto;
  overflow-x: hidden
}
.header{
  padding: 30rpx 40rpx 104rpx 40rpx;
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 250rpx;
  background:linear-gradient(-45deg,rgba(76,207,255,1),rgba(76,173,255,1));
  box-sizing: border-box;
  color: white;
}
.header_title{
  align-self: center;
}
.name{
  font-size:36rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(255,255,255,1);
}
.logo{
  align-self: center;
  width:116rpx;
  height:116rpx;
  border-radius:50%;
  border: 5rpx solid white;
}
.logo image{
  width: 100%; 
  height: 100%;
  border-radius:50%;
}
.task_info{
  margin: -74rpx 40rpx 10rpx 40rpx;
  padding: 50rpx 0;
  text-align: center;
  background:rgba(255,255,255,1);
  box-shadow:0px 0px 14px 0px rgba(0, 0, 0, 0.17);
  box-sizing: border-box;
}
.task_info .num{
  font-size:80rpx;
  font-family:Microsoft YaHei;
  font-weight:300;
  color:rgba(59,199,255,1);
  line-height:80rpx
}
.task_info .unit{
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;color:rgba(59,199,255,1);
}
.task_info .task_title{
  margin-top:40rpx;
  margin-bottom:25rpx;
  font-size:32rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(77,77,77,1);
}
.task_info .note{
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(153,153,153,1);
}
.task_des,.video,.work_des,.pic,.address,.goods_des{
  padding: 70rpx 40rpx;
}
.task_des view{
  margin-bottom: 25rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(153,153,153,1);
}
.task_des view:nth-child(1),.video view:nth-child(1),.work_des view:nth-child(1),.pic view:nth-child(1),.address view:nth-child(1),.goods_des view:nth-child(1){
  margin-bottom: 58rpx;
  font-size:36rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(26,26,26,1);
}
.task_des text{
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);
}
.line{
  margin: 0 auto;
  width:670rpx;
  height:1rpx;
  background:rgba(230,230,230,1);
  border-radius:1rpx;
}
.video video{
  width: 100%;
  margin-bottom: 44rpx;
  z-index:0;
}
.work_des view:nth-child(2),.goods_des view:nth-child(4){
  white-space:pre-line;
  font-size:28rpx;
  font-family:Microsoft YaHei;
  font-weight:400;
  color:rgba(102,102,102,1);
}
.pic image{
  margin-bottom: 11rpx;
  width:100%
}
.goods_des view:nth-child(2),.goods_des view:nth-child(3){
  font-size:28rpx;
  font-family:Microsoft YaHei;
  font-weight:400;
  color:rgba(36,191,255,1);
  margin-bottom: 38rpx;
}
.address text{
  margin-left: 21rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);
  vertical-align: text-top;
}
.space{
  height: 128rpx;
}
.footer{
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  padding: 23rpx 40rpx;
  width: 100%;
  border-top: 1rpx solid #E6E6E6;
  background: #fff;
  box-sizing: border-box
}
.footer form{
  height:82rpx;
}
.footer button{
  height:82rpx;
  border-radius:41rpx;
  font-size:28rpx;
  font-family:Microsoft YaHei;
  font-weight:400;
  text-align: center;
  line-height: 82rpx;
}
.footer form:nth-child(1) button{
  width:240rpx;
  height:80rpx;
  line-height: 80rpx;
  background:rgba(247,253,255,1);
  border:1rpx solid rgba(36, 191, 255, 1);
  color:rgba(36,191,255,1);
  margin-right: 40rpx;
}
.footer form:nth-child(2) button{
  width:390rpx;
  background:rgba(36,191,255,1);
  color:rgba(255,255,255,1);
}
.decorate:nth-last-child(1) text{
  display: none
}



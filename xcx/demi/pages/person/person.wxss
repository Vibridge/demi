.loading{
  width: 100rpx;
  height: 100rpx;
  margin-top: 80%
}
.contain {
  margin: 140rpx auto 0 auto;
  overflow-x: hidden;
  text-align: center;
}
.header{
  height:121rpx;
  background:linear-gradient(-45deg,rgba(76,207,255,1),rgba(76,173,255,1));
}
.avatar{
  width: 116rpx;
  height: 116rpx;
  transform: translateY(-50%);
  border: 5rpx solid white;
  border-radius: 50%;
  background: #000
}
.info{
  display: flex;
  justify-content: center;
  margin-top: -40rpx;
  transform: translateX(5%);
  margin-bottom: 25rpx;
}
.info image{
  align-self: center;
  vertical-align: middle;
  width: 34rpx;
  margin-right: 20rpx;
  height: auto
}
.info view{
  margin-right: 20rpx;
}
.note{
  font-size:26rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:#4D4D4D;
  margin-bottom: 70rpx
}
.note text{
  margin-right: 16rpx;
}
.main{
  padding: 0 40rpx;
  text-align: left;
  margin-bottom: 198rpx;
}
.work_info{
  height:376rpx;
  background:rgba(255,255,255,1);
  box-shadow:0 0 14rpx 0 rgba(0, 0, 0, 0.17);
  border-radius:1rpx;
  padding: 37rpx 41rpx;
  box-sizing: border-box;
}
.title{
  display: flex;
  justify-content: flex-start;
  margin-bottom: 36rpx
}
.title view{
  align-self: center;
  width:8rpx;
  height:37rpx;
  background:rgba(36,191,255,1);
  border-radius:4rpx;
  margin-right: 18rpx;
}
.title text{
  align-self: center;
  font-size:36rpx;
  font-family:Microsoft YaHei;
  font-weight:400;
  color:rgba(51,51,51,1);
}
.detail{
  display: flex;
}
.detail_title{
  margin-left: 26rpx;
  margin-right: 92rpx;
  font-size:30rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(153,153,153,1);
  line-height:60rpx;
}
.detail_value{
  font-size:30rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height:60rpx;
}

.work,.video{
  font-family:Microsoft YaHei;
  font-weight:400;
  text-align: left;
  padding: 70rpx 0 0 0;
}
.video .title{
  margin-left: 41rpx;
  margin-bottom: 70rpx;
}
.video video{
  width: 100%;
}
.work view:nth-child(1),.des view:nth-child(1),.edc view:nth-child(1){
  font-size:40rpx;
  font-weight:bold;
  color:rgba(51,51,51,1);
  margin-bottom: 70rpx;
}
.work_detail view:nth-child(1){
  font-size:32rpx;
  color:rgba(36,191,255,1);
  margin-bottom: 34rpx;
}
.work_detail view:nth-child(2){
  font-size:30rpx;
  color:rgba(51,51,51,1);
  margin-bottom: 44rpx;
}
.work_detail view:nth-child(3){
  font-size:26rpx;
  color:rgba(153,153,153,1);
  margin-bottom: 60rpx
}
.work_detail view:nth-child(4){
  white-space:pre-line;
  font-size:28rpx;
  color:rgba(51,51,51,1);
}
.des view:nth-child(2){
  font-size:28rpx;
  color:rgba(153,153,153,1);
  white-space:pre-line;
}
.edc_info view:nth-child(1){
  font-size:30rpx;
  color:rgba(51,51,51,1);
  margin-bottom: 26rpx;
  font-family:Microsoft YaHei;
  font-weight:400;
}
.edc_detail{
  display: flex;
  justify-content: space-between;
  font-size:28rpx;
  font-family:Microsoft YaHei;
  font-weight:400;
  color:rgba(153,153,153,1);
}
.line{
  margin: 70rpx auto;
  width:670rpx;
  height:2rpx;
  background:rgba(230,230,230,1);
  border-radius:1rpx;
}
.footer{
  position: fixed;
  bottom: 0;
  left:0;
  width: 100%;
  height: 128rpx;
  padding: 20rpx 39rpx;
  border-top: 1rpx solid rgba(204,204,204,1);
  background: #fff;
  box-sizing: border-box
}
.footer button{
  height:82rpx;
  background:rgba(36,191,255,1);
  border-radius:41rpx;
  border:none;
  line-height: 82rpx;
}
.footer view{
  font-size:28rpx;
  font-family:Microsoft YaHei;
  font-weight:400;
  color:rgba(255,255,255,1);
}

.bg{
  position: fixed;
  top:0;
  left:0;
  width: 100%;
  height: 100%;
  background:rgba(0,0,0,.5);
  z-index:10;
}
.res_detail{
  position: fixed;
  top:50%;
  left:50%;
  width: 670rpx;
  background: white;
  transform: translate3d(-50%,-50%,0);
  border-radius:20rpx;
  z-index:100;
}

.main{
  padding:0 51rpx;
}
.logo{
  width:189rpx;
}
.wrap{
  display: flex;
  justify-content: space-between;
  margin-bottom: 37rpx;
}
.wrap:nth-last-child(1){
  margin-top: 44rpx;
}
.wrap view{
  align-self: center
}
.wrap image{
  vertical-align: middle;
  height:auto;
}
.icon{
  width: 40rpx;
  margin-left: 10rpx
}
.phone{
  width: 480rpx;
  margin-left: 31rpx;
}
.line{
  width:570rpx;
  height:2rpx;
  background:rgba(204,204,204,1);
}
.yzm{
  width: 300rpx;
  margin-left: 25rpx;
}
.get{
  font-size:32rpx;
  font-family:Adobe Heiti Std;
  font-weight:normal;
  color:rgba(36,191,255,1);
  width: 166rpx;
  text-align: center;
  height:100%;
}
.placeholder{
  font-size:32rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(179,179,179,1);
}
.button{
  text-align: center;
  width: 670rpx;
  height:80rpx;
  line-height: 80rpx;
  padding: 0 51rpx;
  box-sizing: border-box;
  margin: 40rpx 0;
}
.button view{
  height: 100%;
  background:rgba(59,199,255,1);
  border-radius:50rpx;
  font-size:32rpx;
  font-family:Microsoft YaHei;
  font-weight:400;
  color:rgba(255,255,255,1);
  line-height: 78rpx;
}

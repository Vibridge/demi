.contain {
  margin: 140rpx auto 0 auto;
  text-align: center;
  overflow-x: hidden
}
.header{
  height:121rpx;
  background:linear-gradient(-45deg,rgba(76,207,255,1),rgba(76,173,255,1));
}
.avatar{
  width: 116rpx;
  height: 116rpx;
  transform: translateY(-50%);
  border: 5rpx solid white;
  border-radius: 50%;
}
.info{
  display: flex;
  justify-content: center;
  margin-top: -40rpx;
  transform: translateX(5%);
  margin-bottom: 25rpx;
}
.info image{
  align-self: center;
  vertical-align: middle;
  width: 34rpx;
  margin-right: 20rpx;
  height: auto
}
.info view{
  margin-right: 20rpx;
}
.note{
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(128,128,128,1);
  margin-bottom: 60rpx
}
.note text{
  margin-right: 16rpx;
}
.note text:nth-child(2){
  font-size:12rpx;
  vertical-align: middle;
}
.main{
  padding: 0 40rpx;
  margin-bottom: 128rpx;
}
.video video{
  width: 100%
}
.forword,.des,.pic{
  padding: 70rpx 0;
  border-bottom: 1rpx solid #E6E6E6
}

.title{
  font-size:40rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(26,26,26,1);
  margin-bottom: 58rpx;
  text-align: left;
}
.work{
  display: flex;
  justify-content: flex-start;
  font-size:30rpx;
  font-family:PingFang SC;
  font-weight:500;
}
.work_title{
  color:rgba(153,153,153,1);
}
.work_info{
  text-align: left;
  color: #333333;
  line-height: 45rpx;
}
.detail{
  white-space:pre-line;
  font-size:28rpx;
  font-family:Microsoft YaHei;
  font-weight:400;
  color:rgba(51,51,51,1);
  text-align: left
}
.pic image{
  width: 100%;
  margin-bottom: 10rpx
}
.footer{
  position: fixed;
  bottom: 0;
  left:0;
  width: 100%;
  height: 128rpx;
  padding: 20rpx 39rpx;
  border-top: 1rpx solid rgba(204,204,204,1);
  background: #fff;
  box-sizing: border-box
}
.footer button{
  height:82rpx;
  background:rgba(36,191,255,1);
  border-radius:41rpx;
  border:none;
  line-height: 82rpx;
}
.footer view{
  font-size:28rpx;
  font-family:Microsoft YaHei;
  font-weight:400;
  color:rgba(255,255,255,1);
}
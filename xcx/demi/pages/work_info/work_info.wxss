.loading{
  width: 100rpx;
  height: 100rpx;
  margin-top: 80%
}
.contain {
  margin: 129rpx auto 0 auto;
  overflow-x: hidden
}
.header{
  padding: 30rpx 40rpx 104rpx 40rpx;
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 250rpx;
  background:linear-gradient(-45deg,rgba(76,207,255,1),rgba(76,173,255,1));
  box-sizing: border-box;
  color: white;
}
.header_title{
  align-self: center;
}
.name{
  font-size:36rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(255,255,255,1);
}
.logo{
  align-self: center;
  width:116rpx;
  height:116rpx;
  border-radius:50%;
  border: 5rpx solid white;
}
.logo image{
  width: 100%; 
  height: 100%;
  border-radius:50%;
}
.task_info{
  margin: -74rpx 40rpx 10rpx 40rpx;
  padding: 50rpx 0;
  text-align: center;
  background:rgba(255,255,255,1);
  box-shadow:0px 0px 14px 0px rgba(0, 0, 0, 0.17);
  box-sizing: border-box;
}
.task_info .num{
  font-size:80rpx;
  font-family:Microsoft YaHei;
  font-weight:300;
  color:rgba(59,199,255,1);
  line-height:80rpx
}
.task_info .unit{
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;color:rgba(59,199,255,1);
}
.task_info .task_title{
  margin-top:40rpx;
  margin-bottom:25rpx;
  font-size:32rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(77,77,77,1);
}
.task_info .note{
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(153,153,153,1);
}
.task_des,.company_info{
  padding: 70rpx 40rpx;
}
.video{
  padding: 70rpx 40rpx 0 40rpx;
}
.pic{
  padding: 0 40rpx 70rpx 40rpx;
  margin-bottom: 128rpx;
}
.pic image{
  width: 100%;
}
.task_des view{
  margin-bottom: 25rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(153,153,153,1);
}
.task_des .title,.video view:nth-child(1),.company_info view:nth-child(1){
  margin-bottom: 58rpx;
  font-size:36rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(26,26,26,1);
}
.task_des .detail,.company_info .detail{
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:#666666;
  white-space:pre-line;
}
.room{
  margin-bottom: 100rpx
}
.video video{
  width: 100%;
  z-index:0;
}
.line{
  margin: 0 auto;
  width:670rpx;
  height:1rpx;
  background:rgba(230,230,230,1);
  border-radius:1rpx;
}
.footer{
  position: fixed;
  bottom: 0;
  left:0;
  width: 100%;
  height: 128rpx;
  padding: 20rpx 39rpx;
  border-top: 1rpx solid rgba(204,204,204,1);
  background: #fff;
  box-sizing: border-box
}
.footer button{
  height:82rpx;
  background:rgba(36,191,255,1);
  border-radius:41rpx;
  border:none;
  line-height: 82rpx;
}
.footer view{
  font-size:28rpx;
  font-family:Microsoft YaHei;
  font-weight:400;
  color:rgba(255,255,255,1);
}
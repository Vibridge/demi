.loading{
  width: 100rpx;
  height: 100rpx;
  margin-top: 80%
}
.contain {
  margin: 140rpx auto 0 auto;
}
.main{
  width: 100%;
  height:100%;
  display: flex;
  justify-content: space-between;
}
.left{
  width: 210rpx;
  height:1190rpx;
  background:rgba(248,248,250,1);
  text-align: left;
  overflow: scroll;
}
.left .province{
  padding: 45rpx 70rpx 45rpx 0;
  font-size:30rpx;
  font-family:Microsoft YaHei;
  font-weight:400;
  color:rgba(101,101,101,1);
}
.link{
  padding-left: 40rpx;
}
.active_pro{
  color: #24BFFF;
  border-left: 1rpx solid rgba(0,180,239,1);
}
.active_city{
  color: #24BFFF;
}
.right{
  width: 550rpx;
  height:1190rpx;
  background:#fff;
  text-align: center;
  overflow: scroll;
}
.right .city{
  padding: 45rpx 70rpx 45rpx 40rpx;
  font-size:30rpx;
  font-family:Microsoft YaHei;
  font-weight:400;
  color:rgba(101,101,101,1);
}
.contain {
  margin: 140rpx auto 0 auto;
  border-top: 1rpx solid #e6e6e6;
}

.header {
  width: 100%;
  padding: 39rpx 40rpx;
  box-sizing: border-box
}

.title {
  font-size: 34rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(77, 77, 77, 1);
  margin-bottom: 31rpx;
}
.icon{
  position: absolute;
  top:-10rpx;
  right:-10rpx;
  color: red
}
.none {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(179, 179, 179, 1);
  margin-top: 18rpx;
}
.select{
  display: inline-block;
  width:auto;
  height:64rpx;
  line-height: 62rpx;
  background:rgba(247,253,255,1);
  border:1px solid rgba(36, 191, 255, 1);
  border-radius:32rpx;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(36,191,255,1);
  text-align: center;
  margin-right: 20rpx;
  margin-bottom: 10rpx;
  position:relative;
  padding: 0 33rpx;
  box-sizing: border-box
}

.line {
  height: 20rpx;
  background: rgba(247, 247, 247, 1);
  border-radius: 1rpx;
}

.option {
  padding: 20rpx 40rpx;
}

.first {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(179, 179, 179, 1);
  margin-top: 19rpx;
}

.show {
  padding-top: 40rpx;
}

.label {
  display: inline-block;
  height: 64rpx;
  background: rgba(255, 255, 255, 1);
  border: 1rpx solid rgba(204, 204, 204, 1);
  border-radius: 32rpx;
  margin-right: 20rpx;
  margin-bottom: 30rpx;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  color: rgba(77, 77, 77, 1);
}
.active_industry {
  background:#3bc7ff;
  color: #fff;
  border: none;
}

.detail {
  height: 100%;
  text-align: center;
  font-size: 24rpx;
  line-height: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
}


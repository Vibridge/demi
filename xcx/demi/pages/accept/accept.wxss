.res{
  position: fixed;
  top:0;
  left:0;
  width: 100%;
  height: 100%;
  background:rgba(0,0,0,.5);
  z-index:100;
}
.res_detail{
  position: fixed;
  top:50%;
  left:50%;
  width: 670rpx;
  background: white;
  transform: translate3d(-50%,-50%,0);
  border-radius:20rpx;
}
.main{
  padding: 43rpx 51rpx;
}
.title{
  font-size:30rpx;
  font-family:Microsoft YaHei;
  font-weight:400;
  color:rgba(77,77,77,1);
}
.note{
  font-size:28rpx;
  font-family:Microsoft YaHei;
  font-weight:400;
  color:rgba(128,128,128,1);
  text-align:center;
  margin-bottom:44rpx;
}
cover-image{
  width:95rpx;
  margin:60rpx auto 33rpx;
}
.button{
  display: flex;
  justify-content: space-between;
  border-top:1rpx solid #E6E6E6;
}
.first{
  width:49%;
  color:rgba(128,128,128,1);
}
.second{
  width:1px;
  height:38rpx;
  color:rgba(230,230,230,1);
}
.third{
  width:49%;
  color:rgba(36,191,255,1);
}
.button cover-view{
  align-self: center;
  text-align: center;
  padding: 30rpx 0;
  font-size: 28rpx
}
.button #open{
  align-self: center;
  text-align: center;
  font-size: 28rpx;
  width:49%;
  background: none;
  height: 60rpx;
  line-height: 30rpx;
  border: none;
  color:rgba(128,128,128,1);
  display: flex;
  justify-content: center
}
.button #open::after {
  border: none;
}
.button #open .open{
  align-self: center;
  padding:0;
}
.contain {
  margin: 140rpx auto 0 auto;
  padding: 0 40rpx;
  box-sizing: border-box;
  border-top:1rpx solid #E6E6E6
}
.header{
  text-align: center;
  margin-top: 30rpx;
}
.header .title{
  font-size:46rpx;
  font-family:Microsoft YaHei;
  font-weight:400;
  color:rgba(70,70,70,1);
  margin-bottom: 61rpx
}
.header image{
  width: 185rpx;
  height: 185rpx;
  margin-bottom: 70rpx;
  border-radius: 50%
}
.header .sex{
  display: flex;
  justify-content: center;
  margin-bottom: 50rpx;
}
.header .sex view{
  width:144rpx;
  height:50rpx;
  line-height: 50rpx;
  background:rgba(255,255,255,1);
  border:1px solid rgba(128, 128, 128, 1);
  border-radius:25rpx;
  font-size:34rpx;
  font-family:Microsoft YaHei;
  font-weight:400;
  color:rgba(128,128,128,1);
}
.header .sex view:nth-child(1){
  margin-right: 67rpx;
}
#active{
  background:rgba(59,199,255,1);
  color: white;
  border: none;
}
.city,.work,.industry,.pic,.vid,.name{
  padding: 54rpx 0;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #E6E6E6
}
.city text:nth-child(1),.work text:nth-child(1),.industry text:nth-child(1),.pic text:nth-child(1),.vid text:nth-child(1),.name text:nth-child(1){
  align-self: center;
  font-size:28rpx;
  font-family:Microsoft YaHei;
  font-weight:400;
  color:rgba(153,153,153,1);
}
.name input{
  text-align: right;
  margin-right: 47rpx;  
}
#foot,#work,#industry,#pic,#vid{
  align-self: center;
  display: flex;
}
#foot text,#work text,#industry text,#pic text,#vid text{
  align-self: center;
  font-size:34rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);
  margin-right: 34rpx;
}
#foot view,#work view,#industry view,#pic view,#vid view{
  align-self: center;  
}
#foot image,#work image,#industry image,#pic image, #vid image{
  width: 13rpx;
}
.des{
  padding: 54rpx 0 29rpx 0; 
  margin-bottom: 174rpx;
}
.des text:nth-child(1){
  font-size:28rpx;
  font-family:Microsoft YaHei;
  font-weight:400;
  color:rgba(153,153,153,1);
}
#des{
  margin-top: 32rpx;
}
.input{
  font-size:28rpx;
  font-family:Microsoft YaHei;
  font-weight:400;
  color:rgba(153,153,153,1);
}
.limit{
  text-align: right;
}
#limit_cursor{
  font-size:26rpx;
  font-family:SimHei;
  font-weight:400;
  color:rgba(36,191,255,1);
}
#limit_length{
  font-size:26rpx;
  font-family:SimHei;
  font-weight:400;
  color:rgba(153,153,153,1);
}
.bottom{
  position: fixed;
  bottom: 0;
  left:0;
  padding: 46rpx 40rpx;
  width: 100%;
  box-sizing: border-box;
  border-top: 1rpx solid #E6E6E6;
  background: white;
  z-index:10

}
.bottom button{
  height: 82rpx;
  line-height: 82rpx;
  font-size:28rpx;
  font-family:Microsoft YaHei;
  font-weight:400;
  color:rgba(255,255,255,1);
  background:rgba(36,191,255,1);
  border-radius:41rpx;
}
.input-placeholder{
  text-align: right;
  color:rgba(51,51,51,1);
  font-size:34rpx;
}
.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 98rpx;
  display: flex;
  background: white;
  padding-bottom: env(safe-area-inset-bottom);
  box-shadow:0px -3rpx 13rpx 0px rgba(6,0,1,0.07);
}

.tab-bar-border {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 0px;
  transform: scaleY(0.5);
  background-color: rgba(0, 0, 0, 0.33);
}

.tab-bar-item {
  flex: 1;
  display: flex;
  text-align: center;
  align-items: center;
  flex-direction: column;
  justify-content: center;
}

.tab-bar-item cover-image {
  width: 41rpx;
  height: 42rpx;
  margin-bottom: 11rpx
}

.tab-bar-item cover-view {
  font-size: 26rpx;
}

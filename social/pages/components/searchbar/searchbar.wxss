.weui-search-bar {
  height: 60rpx;
  line-height: 60rpx;
  box-sizing: border-box;
  -webkit-text-size-adjust: 100%;
}

.weui-icon-search_in-box {
  top: 18%;
  left: 46rpx;
  position: absolute;
}

.weui-search-bar__box {
  z-index: 1;
  width: 100%;
  height: 60rpx;
  position: relative;
  padding-left: 100rpx;
  padding-right: 100rpx;
  box-sizing: border-box;
}

.weui-search-bar__input {
  height: 66rpx;
  font-size: 26rpx;
  line-height: 66rpx;
  caret-color: #07c160;
}

.weui-icon-clear {
  position: absolute;
  top: 30%;
  right: 0;
  bottom: 0;
  padding: 0 24rpx;
  font-size: 0;
}

.weui-icon-clear:after {
  content: "";
  height: 100%;
  vertical-align: middle;
  display: inline-block;
  width: 0;
  overflow: hidden;
}

.store_info{
  display: flex;
  margin-bottom: 27rpx;
}
.store_name{
  font-size:28rpx;
  font-weight:bold;
  align-self: center;
  margin-right: 10rpx;
  color:rgba(51,51,51,1);
}

.icon{
  align-self: center
}

.good_info{
  display: flex
}

.good_logo{
  width: 200rpx;
  height: 200rpx;
  margin-right: 22rpx;
}

.good_info_wrap{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between
}

.good_name{
  font-size:30rpx;
  font-weight:bold;
  line-height: 31rpx;
  color:rgba(51,51,51,1);
}

.good_sku{
  font-size:24rpx;
  line-height:31px;
  color:rgba(204,204,204,1);
}

.good_sale{

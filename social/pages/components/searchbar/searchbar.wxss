  align-self: center;
  color:rgba(244,51,60,1);
}

.decreate,.add{
  width:32rpx;
  height:32rpx;
  font-size: 20rpx;
  border-radius:50%;
  align-self: center;
  text-align: center;
  line-height: 32rpx;
  color: rgba(204,204,204,1);
  border:1rpx solid rgba(204,204,204,1);
}

.add{
  color: #ffffff;
  font-size: 30rpx;
  background:rgba(255,226,0,1);
  border:1rpx solid rgba(255,226,0,1);
}

.sum{
  font-size:28rpx;
  padding: 0 39rpx;
  color:rgba(51,51,51,1);
}
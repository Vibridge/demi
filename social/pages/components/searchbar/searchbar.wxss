.weui-search-bar {
  height: 60rpx;
  line-height: 60rpx;
  box-sizing: border-box;
  -webkit-text-size-adjust: 100%;
}

.weui-icon-search_in-box {
  top: 18%;
  left: 46rpx;
  position: absolute;
}

.weui-search-bar__box {
  z-index: 1;
  width: 100%;
  height: 60rpx;
  position: relative;
  padding-left: 100rpx;
  padding-right: 100rpx;
  box-sizing: border-box;
}

.weui-search-bar__input {
  height: 66rpx;
  font-size: 26rpx;
  line-height: 66rpx;
  caret-color: #07c160;
}

.weui-icon-clear {
  position: absolute;
  top: 30%;
  right: 0;
  bottom: 0;
  padding: 0 24rpx;
  font-size: 0;
}

.weui-icon-clear:after {
  content: "";
  height: 100%;
  vertical-align: middle;
  display: inline-block;
  width: 0;
  overflow: hidden;
}


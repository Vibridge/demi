.weui-vtabs {
  width: 100%;
  height: 100%;
  display: flex;
}

.weui-vtabs-bar__wrp {
  width: auto;
  height: 100%;
  
}

.weui-vtabs-bar__scrollview {
  height: 100%;
}

.weui-vtabs-bar__content {
  width: auto;
  height: 100%;
}

.weui-vtabs-bar__item {
  width: auto;
  height: 98rpx;
  display: block;
  border-left: 8rpx solid transparent;
}

.weui-vtabs-bar__title {
  width: 100%;
  height: 100%;
  display: flex;
  padding: 0 50rpx;
  overflow: hidden;
  font-size: 28rpx;
  white-space: nowrap;
  align-items: center;
  box-sizing: border-box;
  justify-content: center;
}

.weui-vtabs-content__wrp {
  flex: 1;
  height: 100%;
  overflow: hidden;
}

.weui-vtabs-content__scrollview {
  height: 100%;
}

.weui-vtabs-content {
  height: 100%;
}

/* 列表 */
.car_wrap{
  background: #F9F9F9;
  padding: 30rpx 30rpx 100rpx 30rpx;
}
/* 单个店铺订单 */
.car_list{
  border-radius:12rpx;
  margin-bottom: 23rpx;
  padding: 30rpx 30rpx 0 30rpx;
  background:rgba(255,255,255,1);
}
/* 单个店铺名称 */
.car_title{
  display: flex;
  margin-bottom: 27rpx;
  justify-content: space-between;
}

.title_info{
  display: flex;
  align-self: center;
}

.circle{
  width: 38rpx;
  height: 38rpx;
  margin-left: 5rpx;
  border-radius:50%;
  align-self: center;
  margin-right: 26rpx;
  border:1rpx solid rgba(204,204,204,1);
}

.select{
  align-self: center;
  margin-right: 26rpx;
}

.name{
  color: #333333;
  font-weight:bold;
  font-size: 30rpx;
  align-self: center;
  margin-right: 12rpx;
}

.icon{
  align-self: center;
}
/* 商品 */
.good_info{
  display: flex;
  padding-bottom: 24rpx;
}

.good_info .circle{
  margin-right: 20rpx;
}

.good_info .select{
  margin-right: 20rpx;
}

.good_logo{
  width:200rpx;
  height:200rpx;
  border-radius:12rpx;
  margin-right: 22rpx;
  background:rgba(255,118,70,1);
}

.good_basic{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.good_name text{
  font-weight:bold;
  font-size: 30rpx;
  color: #333333;
}

.good_name view{
  font-size:24rpx;
  color: #cccccc;
  margin-top: 18rpx;
}

.good_sale{
  display: flex;
  justify-content: space-between;
}

.good_sale text{
  font-size: 32rpx;
  color: #F4333C;
}

/* 底部 */
.bottom{
  left: 0;
  bottom: 0;
  width: 100%;
  display: flex;
  height: 98rpx;
  z-index: 10000;
  position: fixed;
  background: #fff;
  justify-content: space-between;
}

.sale_result{
  display: flex;
  align-self: center;
}

.sale_result .circle,.sale_result .select{
  margin-left: 30rpx;
  margin-right: 20rpx;
}

.label1{
  font-size:30rpx;
  font-weight:bold;
  color: #333333;
  align-self: center;
  margin-right: 36rpx;
}
.label2{
  font-size:28rpx;
  color: #999999;
  align-self: center;
  margin-right: 20rpx;
}
.label3{
  font-size:30rpx;
  font-weight:bold;
  color: #F4333C;
  align-self: center;
}

.coc{
  height:98rpx;
  width:276rpx;
  font-size:50rpx;
  text-align: center;
  line-height: 98rpx;
  background:rgba(255,226,0,1);
  color:rgba(255,255,255,1);
}

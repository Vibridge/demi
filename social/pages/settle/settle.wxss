.container{
  padding: 27rpx 0 98rpx 0;
  background: #F9F9F9;
}
/* 订单地址 */
.order_address{
  margin-bottom: 30rpx;
  background: #ffffff;
  padding: 32rpx 30rpx 30rpx ;
}

.address_title{
  display: flex;
  margin-bottom: 29rpx;
  justify-content: space-between;
}

.method{
  font-size:32rpx;
  font-weight:bold;
  color:rgba(51,51,51,1);
}

.method_select{
  display: flex;
  align-self: center;
}

.in_store,.in_home{
  display: flex;
}

.in_store{
  margin-right: 25rpx;
}

.circle,.circle_on{
  width:16rpx;
  height:16rpx;
  border-radius:50%;
  align-self: center;
  margin-right: 25rpx;
  border:1rpx solid rgba(204,204,204,1);
}

.circle_on{
  background:rgba(255,226,0,1);
  border:1rpx solid rgba(255,226,0,1);
}

.label{
  font-size:28rpx;
  color:rgba(204,204,204,1);
}

.active_label{
  color: #333333!important
}

.address_info{
  display: flex;
  justify-content: space-between;
}

.address_main{
  display: flex;
  align-self: center;
}
.address_main image{
  width: 29rpx;
  align-self: center;
  margin-right: 20rpx;
}

.address{
  color: #333333;
}

.name,.phone{
  font-size: 26rpx;
}

.name{
  margin-right: 44rpx;
}
/* 商品 */
.order_good{
  padding: 30rpx;
  margin-bottom: 30rpx;
  background: #ffffff;
}

.store_name{
  font-size:28rpx;
  font-weight:bold;
  color:rgba(51,51,51,1);
}

.good_info{
  display: flex;
  margin-top: 27rpx;
  margin-bottom: 30rpx;
}

.good_info image{
  width:202rpx;
  height:202rpx;
  border-radius:12rpx;
  margin-right: 21rpx;
}

.good_main{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.good_name{
  font-size:30rpx;
  color:#333333;
  font-weight:bold;
  line-height:31px;
}

.good_sku{
  font-size:24rpx;
  color:rgba(204,204,204,1);
}

.good_sale{
  display: flex;
  justify-content: space-between;
}

.good_price{
  font-size:32rpx;
  color:rgba(244,51,60,1);
}

.good_num{
  font-size:28rpx;
  color:rgba(204,204,204,1);
}

.select_result{
  font-size:26rpx;
  text-align: right;
  color:rgba(204,204,204,1);
}

.select_result text:nth-child(1){
  margin-right: 32rpx;
}

.select_result text:nth-child(3){
  color:#F4333C;
}

/* 备注 */
.other{
  padding: 0 30rpx;
  margin-top: 30rpx;
  background: #ffffff;
}

.paymethod,.note{
  display: flex;
  padding: 26rpx 0;
  font-size: 32rpx;
  color: #333333;
  justify-content: space-between;
}
.paymethod{
  border-bottom: 1rpx solid #E4E4E4
}
.paymethod text,.note text{
  align-self: center;
}

/* 底部 */
.bottom{
  left: 0;
  bottom: 0;
  width: 100%;
  display: flex;
  height: 98rpx;
  position: fixed;
  margin-left: 29rpx;
  background: #fff;
  justify-content: space-between;
}

.sale_result{
  display: flex;
  align-self: center;
}

.label2{
  font-size:28rpx;
  color: #999999;
  align-self: center;
  margin-right: 21rpx;
}
.label3{
  font-size:30rpx;
  font-weight:bold;
  color: #F4333C;
  align-self: center;
}

.coc{
  height:98rpx;
  width:300rpx;
  font-size:40rpx;
  text-align: center;
  line-height: 98rpx;
  background:rgba(255,226,0,1);
  color:rgba(255,255,255,1);
}